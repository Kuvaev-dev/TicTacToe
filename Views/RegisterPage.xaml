<Page x:Class="TicTacToe.Views.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe.Views"
      mc:Ignorable="d"
      Title="RegisterPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="Username"/>
            <TextBox Name="UsernameTextBox" Margin="10" Width="115"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="Password"/>
            <PasswordBox Name="PasswordBox" Margin="10" Width="115"/>
        </StackPanel>
        <Button Grid.Row="2" Content="Register" Click="RegisterButton_Click" Margin="10"/>
        <Button Grid.Row="3" Content="Go to Login" Click="GoToLoginButton_Click" Margin="10"/>
    </Grid>
</Page>
