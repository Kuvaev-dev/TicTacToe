<Page x:Class="TicTacToe.Views.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicTacToe.Views"
      mc:Ignorable="d"
      Title="ProfilePage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="Username"/>
            <TextBox Name="NewUsernameTextBox" Margin="10" Width="115"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="Password"/>
            <PasswordBox Name="NewPasswordBox" Margin="10" Width="115"/>
        </StackPanel>
        <Button Grid.Row="2" Content="Update Profile" Click="UpdateProfileButton_Click" Margin="10"/>
        <Button Grid.Row="3" Content="Delete Account" Click="DeleteAccountButton_Click" Margin="10"/>
        <Button Grid.Row="4" Content="Logout" Click="LogoutButton_Click" Margin="10"/>
    </Grid>
</Page>
