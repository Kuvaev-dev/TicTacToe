<Application x:Class="TicTacToe.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vmlocator="clr-namespace:TicTacToe.ViewModels.Base"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <vmlocator:ViewModelLocator x:Key="Locator" />
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/TicTacToe;component/Views/Themes/MainTheme.xaml"/>
                <ResourceDictionary Source="/TicTacToe;component/Views/Localization/English.xaml"/>
                <ResourceDictionary Source="/TicTacToe;component/Views/Localization/Українська.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>